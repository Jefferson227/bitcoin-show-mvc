            </div>
            <div class="input-field inline col s12 m3">
                <input asp-for="Quit" class="validate"/>
                <label asp-for="Quit"></label>
            </div>
            <div class="input-field col s6 m3">
                <select asp-for="Level" asp-items="Html.GetEnumSelectList<LevelEnum>()"></select>
                <label asp-for="Level"></label>
            </div>
                    <div class="row hide-on-small-only">
            <div class="col m12 right">
                <button class="waves-effect waves-light btn" type="submit" id="btnSaveQuestion">Save <i class="material-icons right">send</i></button>
            </div>
        </div>
        </div>
    </form>
</div>
