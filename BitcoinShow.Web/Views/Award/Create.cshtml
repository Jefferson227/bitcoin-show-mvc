@using BitcoinShow.Web.Models

@model AwardViewModel
@{
    ViewData["Title"] = "Create Award";
}
<div class="row">
    <form asp-action="Create" asp-controller="Award" method="post" id="award-form" class="col s12 m6 push-m3">
        <div class="row">
            <div class="input-field inline col s12 m3">
                <input asp-for="Success" class="validate"/>
