@using BitcoinShow.Web.Models

@model QuestionViewModel
@{
    ViewData["Title"] = "Create question";
}
<div class="row">
    @using (Html.BeginForm("Create", "Question", FormMethod.Post, new { @id = "form-question", @class = "col s12 m6" }))
    {
        <div class="row">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title)
            <br />
            @for (int i = 0; i < Model.Options.Count; i++)
            {
                @Html.TextBoxFor(m => m.Options[i].Text)
                @Html.RadioButtonFor(m => m.AnswerIndex, i)
                <br />
            }

            <div class="input-field col s12 m12">
                <select asp-for="Level" asp-items="Html.GetEnumSelectList<LevelEnum>()"></select>
                <label asp-for="Level"></label>
            </div>
            <button>Salvar</button>
        </div>
    }
</div>

